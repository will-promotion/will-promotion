---
import { PAGE_LINKS } from "../constants";
---

<h1><a href="/" class="header__icon">WILL</a></h1>
<div class="header__burger-menu js-burger-menu">
  <span></span><span></span><span></span>
</div>
<nav class="js-menu">
  <ul>
    {
      PAGE_LINKS.map(({ title, href }) => (
        <li>
          <a href={href} class="js-menu-item">{title}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav ul {
    display: flex;
    gap: 0 90px;
  }

  .header__icon {
    font-family: "Spectral SC", serif;
    font-weight: 500;
    font-size: 1.875rem;
    line-height: 2;
    letter-spacing: 0;
    color: #797d8a;
  }

  h1 {
    font-family: "Spectral SC", serif;
    font-weight: 500;
    font-size: 1.875rem;
    line-height: 2;
    letter-spacing: 0;
    color: #797d8a;
  }

  a {
    font-family: "Arial", sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    line-height: 1.1;
    letter-spacing: 0;
    color: #797d8a;
    position: relative;
  }

  a:hover {
    opacity: 0.8;
  }

  a:hover::before {
    content: "";
    position: absolute;
    left: 30%;
    top: 0;
    border: 1px solid #333;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    opacity: 1;
    -webkit-animation: 1s circleanime forwards;
    animation: 1s circleanime forwards;
  }

  @media screen and (max-width: 960px) {
    a {
      font-size: 1.125rem;
    }

    .header__burger-menu {
      cursor: pointer;
      position: fixed;
      z-index: 15;
      top: 14px;
      right: 30px;
      width: 30px;
      height: 27px;
    }

    .header__burger-menu span {
      position: absolute;
      display: inline-block;
      width: 100%;
      height: 3px;
      transition: all 0.4s;
      background-color: #797d8a;
    }

    .header__burger-menu span:nth-of-type(2) {
      top: 12px;
    }

    .header__burger-menu span:nth-of-type(3) {
      bottom: 0;
    }

    .header__burger-menu.active span:nth-of-type(1) {
      transform: translateY(12px) rotate(45deg);
    }

    .header__burger-menu.active span:nth-of-type(2) {
      opacity: 0;
    }

    .header__burger-menu.active span:nth-of-type(3) {
      transform: translateY(-12px) rotate(-45deg);
    }

    nav {
        position: fixed;
        z-index: 10;
        top: -300%;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(255, 255, 255, 0.94);
        transition: all 0.6s;
      }

    nav.panelactive {
        top: 0;
        margin: auto;
      }

    nav ul {
        flex-direction: column;
        text-align: center;
        margin-top: 136px;
      }

    nav li {
        margin-top: 30px;
      }
  }

  @-webkit-keyframes circleanime {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  @keyframes circleanime {
    0% {
      transform: scale(0);
    }

    100% {
      transform: scale(2);
      opacity: 0;
    }
  }
</style>

<script>
  window.addEventListener("DOMContentLoaded", function () {
  // burger-menu
  const burger = document.querySelector<HTMLElement>(".js-burger-menu");
  const nav = document.querySelector<HTMLElement>(".js-menu");
  const item = document.querySelectorAll<HTMLElement>(".js-menu-item");

  if (burger && nav) { // burger と nav が存在する場合のみ処理を実行
    burger.addEventListener("click", function () {
      burger.classList.toggle("active");
      nav.classList.toggle("panelactive");
    });
  }

  for (let i = 0; i < item.length; i++) {
    item[i].addEventListener("click", function () {
      if (burger && nav) { // burger と nav が存在する場合のみ処理を実行
        burger.classList.remove("active");
        nav.classList.remove("panelactive");
      }
    });
  }
});
</script>
