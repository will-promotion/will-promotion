---
import { EVENTS } from '../constants';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const title = "新歓イベント";
---

<Layout title={title}>
  <section class="events">
    <div class="events__outer">
      <h2>新歓イベント</h2>
    </div>
    <div class="events__wrapper">
      {
        EVENTS.map(({title, subTitle, content, dateName, date, formName, formUrl, image, alt}) => (
          <div class="events__container">
            <div class="events__item">
              <h3>{title} <span>{subTitle}</span></h3>
              <p>{content}</p>
              <p>{dateName}</p>
              <ul>
                {
                  date.map(item => (<li>・{item}</li>))
                }
              </ul>
              <div class="events__btn-box">
                <p>{formName}</p>
                <a href={formUrl} target="_blank" rel="noopener noreferrer">
                  フォーム申込みはこちらから
                </a>
              </div>
            </div>
            <div class="events__img">
              <img src={image} alt={alt} />
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  h3 {
    font-size: 1.7rem;
    font-weight: 700;
  }

  p {
    margin-top: 35px;
    font-family: "Arial", sans-serif;
  }

  img {
    width: 100%;
  }

  li {
    color: #4b555d;
    font-weight: 700;
  }

  a {
    font-family: "Arial", sans-serif;
    font-weight: 400;
    font-size: 1.25rem;
    line-height: 2;
    letter-spacing: 0;
    color: #41475a;
    color: #b5c97c;
    display: block;
    width: -webkit-fit-content;
    width: -moz-fit-content;
    width: fit-content;
    margin-top: 10px;
    padding: 1.5% 2%;
    border: 2px solid #b5c97c;
    position: relative;
    transition: 0.7s;
  }

  a:hover {
    color: #f7c8da;
    border: 2px solid transparent;
  }

  a:hover::before, a:hover::after {
    transform: scale(1);
  }

  a::before, a::after {
    content: "";
    width: 100%;
    height: 100%;
    z-index: 3;
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    transform: scale(0);
    transition: 0.7s;
  }

  a::before {
    border-bottom: 2px solid #f7c8da;
    border-left: 2px solid #f7c8da;
    transform-origin: 100% 0%;
  }

  a::after {
    border-top: 2px solid #f7c8da;
    border-right: 2px solid #f7c8da;
    transform-origin: 0% 100%;
  }

  .events__outer {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 325px;
    background-image: url(/images/bgi_events_sky.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .events__wrapper {
    padding: 0 4%;
  }

  .events__container {
    max-width: 1140px;
    margin: 200px auto 0;
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    gap: 0 40px;
  }

  .events__container:first-child {
    margin-top: 130px;
  }

  .events__container:last-child {
    margin-bottom: 100px;
  }

  .events__container:nth-of-type(2n) {
    flex-direction: row-reverse;
  }

  .events__item {
    flex-basis: 60%;
  }

  .events__img {
    max-width: 500px;
    min-width: 280px;
  }

  @media screen and (max-width: 1090px) {
    .events__container {
      flex-direction: column;
      align-items: center;
    }

    .events__container:nth-of-type(2n) {
      flex-direction: column;
    }
  }

  @media screen and (min-width: 768px) {
    br {
      display: none;
    }
  }

  @media screen and (max-width: 767px) {
    .events__container {
      margin-top: 80px;
    }

    h3 {
      font-size: 1.35rem;
    }

    span {
      display: block;
      margin-top: 10px;
    }

    li {
      font-size: 1rem;
    }
  }
</style>
